[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
ignore = E203,W503,F401
per-file-ignores =
    __init__.py:F401
    tests/*:F401,E402
    # Tier 3: Prompt templates have long medical text - ignore line length and whitespace
    backend/ai/prompt_templates.py:E501,W293
    backend/ai/safety_checker.py:E501
    # Models have long __repr__ - ignore line length
    backend/models/allergy.py:E501
    backend/models/medical_condition.py:E501
    backend/models/medication.py:E501
    backend/models/symptom_log.py:E501
    # Services have long error messages - ignore
    backend/services/enhanced_chat_service.py:E501,F841
