# =============================================================================
# HealthAI Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# -----------------------------------------------------------------------------
# Required: OpenRouter API Key
# -----------------------------------------------------------------------------
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# For development (SQLite):
DATABASE_URL=sqlite:///healthai.db

# For production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/healthai
# Example with Docker:
# DATABASE_URL=postgresql://healthai:healthai_password@localhost:5432/healthai

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_change_in_production

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# AI Model Configuration (Optional - uses defaults if not set)
# -----------------------------------------------------------------------------
AI_MODEL=x-ai/grok-beta
AI_MAX_RETRIES=3
AI_RETRY_DELAY=2
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# Application Configuration (Optional)
# -----------------------------------------------------------------------------
APP_NAME=HealthAI
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FILE=logs/healthai.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Environment (development, production, testing)
ENVIRONMENT=development
